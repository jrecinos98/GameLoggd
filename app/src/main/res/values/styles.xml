<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <!-- Toolbar Background Color
        <item name="android:background">@color/white</item>
        -->
        <item name = "android:orientation"> vertical </item>
    </style>

    <style name="Toolbar.PopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name = "android:textSize">28sp</item>
        <item name = "android:letterSpacing">0.1</item>
        <item name = "android:fontFamily">@font/poppins_bold</item>
        <item name = "android:textColor">@color/black</item>
    </style>
    <style name = "TitleIcon" parent="Widget.AppCompat.ImageButton">
        <item name = "android:backgroundTint">@color/colorAccent</item>
        <item name = "android:scaleType">centerInside</item>
        <item name = "android:layout_marginEnd">11dp</item>
        <item name = "android:layout_width">wrap_content</item>
        <item name = "android:layout_height">wrap_content</item>
    </style>
    <style name = "ProgressBar" parent = "Widget.AppCompat.ProgressBar.Horizontal">
        <item name = "android:backgroundTint">@color/white</item>
        <item name = "android:indeterminate">true</item>
        <item name = "android:indeterminateOnly"> true </item>
        <item name = "android:indeterminateTint"> @color/colorAccent</item>
        <item name = "android:maxHeight">2dp</item>
        <item name = "android:layout_marginTop">1dp</item>
    </style>

    <style name = "GameCard">
        <item name = "android:background">@drawable/shape_rect_border</item>
        <item name = "android:layout_width">match_parent</item>
        <item name = "android:layout_height">match_parent</item>
    </style>
    <style name="GameCard.Text" parent="Widget.AppCompat.TextView">
        <item name = "android:layout_gravity">start</item>
        <item name = "android:ellipsize">end</item>
        <item name = "android:maxLines"> 1 </item>
        <item name = "android:textAlignment">textStart</item>
    </style>
    <style name="GameCard.Title" parent="GameCard.Text">
        <item name = "fontFamily">@font/poppins_medium</item>
        <item name = "android:textColor">@color/black</item>
        <item name = "android:textSize">12sp</item>
        <item name = "android:textStyle">bold</item>
    </style>
    <style name="GameCard.Genre" parent="GameCard.Text">
        <item name = "fontFamily">@font/poppins_regular</item>
        <item name = "android:textColor">@color/genreTitle</item>
        <item name = "android:textSize">10sp</item>
    </style>
</resources>